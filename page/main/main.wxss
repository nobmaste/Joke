/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.mirror-button {
  position: relative;
  font-size: 20px;
  background-color: #3498db;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  overflow: hidden;
  margin-top: 20px; /* 调整按钮与摄像头之间的间距 */
}
.frame-info {
  margin-top: 10px;
  text-align: center;
}